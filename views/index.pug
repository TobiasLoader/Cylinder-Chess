doctype html
head
	title Cylinder Chess
	link(rel='stylesheet' href='styles.css')
body
	include ui-components
	h1#cylinder-title Cylinder Chess
	#initgame.state-home
		#startgame
			+mainbutton('Start Game')
			#startgame-options
				#colour.game-option
					+gameoption('colour-white','colour','white','w',true)
					+gameoption('colour-black','colour','black','b',false)
					+gameoption('colour-random','colour','random','r',false)
				#time.game-option
					+gameoption('time-1','time','1m + 5s','1+5',true)
					+gameoption('time-5','time','5m + 0s','5+0',false)
					+gameoption('time-unlimited','time','unlimited','u',false)
				#surface.game-option
					+gameoption('surface-cylinder','surface','cylinder','cylinder',true)
					+gameoption('surface-square','surface','square','square',false)
				#roomsize.game-option
					+gameoption('roomsize-2','roomsize','room size 2','2',true)
					+gameoption('roomsize-3','roomsize','room size 3','3',false)
				+subbutton('createroom','Create Room')
				+subbutton('stopcreateroom','Back')
		#joingame
			+mainbutton('Join Game')
			#joingame-options
				input#roomnum(placeholder='#ROOM')
				+subbutton('joinroom','Join Room')
				+subbutton('stopjoinroom','Back')
		#waitingarea
			| Waiting AREA
			h2.room
			+subbuttonclass('leaveroom','leave')
		#gamearea
			| Game AREA
			h2.room
			h3#movemade
			h3#mytime
			h3#opponenttime(style='display:inline;')
			#wcapture
			#bcapture
			#boardarea
			+subbuttonclass('leaveroom','leave')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js')
	script(src='/socket.io/socket.io.js')
	script(type='module' src='main.mjs')